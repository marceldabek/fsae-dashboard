{
  "$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/tsconfig.json",
  "color": {
    "bg": "#000E2F",
    "surface": "#0F1B3A",
    "border": "#24304F",
    "text": "#FFFFFF",
    "muted": "#BDC0C3",
    "accent": "#64C7C9",
    "accent-weak": "#98D7D8",
    "success": "#34D399",
    "warning": "#FACC15",
    "danger": "#BE2D2D",
    "overlay-06": "rgba(255,255,255,0.06)",
    "overlay-10": "rgba(255,255,255,0.10)"
  },
  "font": {
    "family": {
      "sans": "Inter, ui-sans-serif, system-ui, 'Segoe UI', Roboto, Helvetica, Arial, 'Noto Sans'",
      "mono": "ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace"
    },
    "size": {
      "display": 24,
      "section": 18,
      "body": 14,
      "meta": 12,
      "tick": 11
    },
    "tracking": {
      "caps": "0.08em"
    },
    "weight": {
      "bold": 700,
      "semibold": 600,
      "medium": 500,
      "regular": 400
    }
  },
  "spacing": {
    "control-md": 40,
    "control-sm": 30
  },
  "radii": {
    "sm": 4,
    "md": 6,
    "lg": 8,
    "xl": 16
  },
  "semantic": {
    "button-primary-bg": { "ref": "accent" },
    "button-secondary-bg": { "ref": "overlay-06" },
    "button-secondary-border": { "ref": "overlay-10" },
    "input-bg": { "ref": "surface" },
    "input-border": { "ref": "overlay-10" },
    "input-border-focus": { "ref": "accent" },
    "chart-grid": { "ref": "overlay-10" },
    "chart-line-primary": { "ref": "accent" },
    "chart-line-secondary": { "ref": "accent-weak" },
    "status-success": { "ref": "success" },
    "status-warning": { "ref": "warning" },
    "status-danger": { "ref": "danger" }
  }
}
