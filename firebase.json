{
  "functions": [
    {
      "source": "functions",
      "runtime": "nodejs20",
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ],
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ],
  "emulators": {
    "functions": { "host": "127.0.0.1", "port": 5002 },
    "firestore": { "host": "127.0.0.1", "port": 8080 },
    "auth": { "host": "127.0.0.1", "port": 9099 },
    "ui": { "host": "127.0.0.1", "port": 4000 },
    "hub": { "host": "127.0.0.1", "port": 4402 },
    "logging": { "host": "127.0.0.1", "port": 4502 }
  }
}
